{% extends "::base.html.twig" %}

{% block title %}HackdayScaffoldBundle:Scaffold{% endblock %}


{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet"  href="{{ asset('bundles/hackdayscaffold/css/jquery-ui.css') }}" >

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js" type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js" type="text/javascript"></script>
    <script src="{{ asset('bundles/hackdayscaffold/js/init.js')}}" type="text/javascript" >

{% endblock %}


{% block body %}
    <h1>HackdayScaffoldBundle:Scaffold:base</h1>

    {% if (definitions is defined) and (routes is defined)%}
        {% block content %}{% endblock %}  <!-- ### main content  -->

    {% else %} <!-- ### end main if -->
        <h1>Not all parameters received!</h1>
        {% if (definitions is not  defined)  %}
            <p>Definitions is not defined!</p>
        {% endif %}
        {% if (routes is not defined) %}
            <p>Routes is not defined!</p>
        {% endif %}
    {% endif %} <!-- ### end main if -->

{% endblock %}



